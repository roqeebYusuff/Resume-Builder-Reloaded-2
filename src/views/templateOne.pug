doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title User&apos;s Resume
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css' integrity='sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==' crossorigin='anonymous' referrerpolicy='no-referrer')
  style.
    * {
    font-family: "Work Sans", sans-serif;
    box-sizing: border-box;
    }
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
    margin: 0;
    padding: 0;
    }
    .d-flex{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    }
    .main__wrapper {
    box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 50px;
    min-height: 100vh;
    }
    .resume__owner {
    background-color: darkcyan;
    /* padding: 0.3rem 0; */
    text-align: center;
    }
    .resume__owner .name {
    font-size: 3rem;
    }
    .resume__owner .contacts {
    background-color: #024141;
    color: #fff;
    text-align: initial;
    padding: 5px 1rem;
    }
    .resume__owner .contacts .social__icon i {
    padding-right: 10px;
    }
    .other__info {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    padding: 10px 1rem;
    }
    .other__info .left,
    .other__info .right {
    width: 50%;
    padding: 0 5px;
    }
    .single__section {
    margin-bottom: 10px;
    }
    .single__section:last-child {
    margin-bottom: 0;
    }
    .single__section .section__title {
    font-weight: 700;
    color: darkcyan;
    text-decoration: underline;
    text-decoration-thickness: initial;
    text-decoration-style: wavy;
    text-decoration-color: #024141;
    margin-bottom: 5px;
    text-transform: uppercase;
    }
    .single__section .section__content{
      margin-top: 5px;
    }
    .single__section .section__content:first-child{
      margin-top: 0;
    }
    .single__section .section__subtitle {
    font-size: 20px;
    font-weight: 600;
    line-height: initial;
    }
    .single__section .section__semi__subtitle {
    font-size: 17px;
    font-weight: 400;
    }
    .single__section .section__semi__subtitle span {
    font-weight: 700;
    }
    .single__section .small {
    color: darkcyan;
    font-style: italic;
    }
    .single__section .description h6 {
    color: rgb(3, 89, 89);
    font-size: 13px;
    }
    .single__section .description p {
    font-size: 13px;
    font-weight: 300;
    }
    .single__section .link {
    font-size: 13px;
    }
    .single__section .link a {
    margin-left: 5px;
    font-size: 13px;
    font-style: italic;
    text-decoration: none;
    color: darkcyan;
    display: inline-block;
    }
    .single__section .list {
    margin: 0;
    padding: 0;
    list-style: none;
    }
    .single__section .list .list__items {
    display: inline-block;
    background-color: darkcyan;
    color: #fff;
    padding: 5px;
    border-radius: 5px;
    margin-top: 5px;
    font-size: 13px;
    margin-right: 5px;
    }
.resume__wrapper
  .container
    .main__wrapper
      .resume__owner
        h4.name #{personalInfo.lastName} #{personalInfo.firstName} #{personalInfo.middleName} 
        p.description #{personalInfo.about}
        .contacts
          .d-flex
            .col-6
              .side
                .social__icon
                  i.fa-regular.fa-envelope
                  span #{personalInfo.email}
                .social__icon
                  i.fa-solid.fa-globe
                  span #{socials.website}
                .social__icon
                  i.fa-brands.fa-linkedin
                  span #{socials.linkedin}
            .col-6
              .side
                .social__icon
                  i.fa-solid.fa-mobile-screen
                  span #{socials.website}
                .social__icon
                  i.fa-brands.fa-github
                  span #{socials.github}
                .social__icon
                  i.fa-brands.fa-twitter
                  span #{socials.twitter}
      .other__info
        .left
          //- Educations
          section.single__section
            h5.section__title Education
            for education in educations
              .section__content
                h5.section__subtitle #{education.institution}
                h5.section__semi__subtitle
                  | #{education.study} - 
                  span #{education.course}
                .small
                  span #{education.startDate}
                  |  - 
                  span #{education.endDate}
          section.single__section
            h5.section__title 
            for experience in experiences
              .section__content
                h5.section__subtitle #{experience.position}
                h5.section__semi__subtitle #{experience.organisation}
                .small
                  span #{experience.startDate}
                  |  - 
                  span #{experience.endDate}
                .description
                  h6.title Description
                  p #{experience.description}
        .right
          section.single__section
            h5.section__title Projects
            for project in projects
              .section__content
                h5.section__subtitle #{project.title}
                .link
                  i.fa-solid.fa-link
                  span
                      a(href=`${project.link}`) #{project.link}
                .description
                  h6.title Description
                  p #{project.description}
          section.single__section
            h5.section__title Skills
            .section__content
              ul.list
                for skill in skills 
                  li.list__items #{skill}
          section.single__section
            h5.section__title Interests
            .section__content
